{
  "build": {
    "appId": "io.documentation.editor",
    "category": "public.app-category.doc",
    "win": {
      "iconUrl": "app/src/assets/app_icon",
      "target": "squirrel",
      "msi": true
    },
    "linux": {
      "target": "deb"
    },
    "mac": {
      "target": "default"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "dep-install": "npm install && cd app && bower install",
    "clear": "rm -rf dist/*",
    "start": "cd app/ && bower install && cd .. && NODE_ENV='dev' electron ./app --enable-logging",
    "compile-linux": "NODE_ENV='prod' && npm run clear && build --linux --x64",
    "compile-mac": "NODE_ENV='prod' && npm run clear && build --mac",
    "dist": "npm run dep-install && NODE_ENV='prod' && build -wml --x64"
  },
  "devDependencies": {
    "devtron": "^1.3.0",
    "electron": "^1.3.3",
    "electron-prebuilt": "^1.2.0",
    "electron-builder": "^5.30.0",
    "electron-log": "^1.1.1",
    "electron-packager": "^7.7.0",
    "gulp": "^3.9.1",
    "gulp-bump": "^2.4.0",
    "gulp-clean": "^0.3.2",
    "gulp-notify": "^2.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-run": "^1.7.1",
    "node-notifier": "^4.6.1"
  },
  "dependencies": {
    "configstore": "^2.1.0"
  }
}
